{
  "compilerOptions": {
    "target": "es2018",                          
    "module": "esnext",
    "moduleResolution": "node",                     
    "noEmitOnError": true,
    "lib": ["es2017", "ESNext", "DOM"],                            
    "strict": false,  
    "esModuleInterop": false,                 
    "outDir": "dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true
  }
  ,
  "include": ["./src/**/*.ts"]
}